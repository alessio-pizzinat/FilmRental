<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.filmrental.model.User" table="USERS">
		<id name="userId" column="USER_ID">
			<generator class="assigned" />
		</id>
		<property name="username" column="USERNAME" />
		<property name="pass" column="U_PASS" />
		<property name="firstName" column="FIRST_NAME" />
		<property name="lastName" column="LAST_NAME" />


		<bag name="filmRented" inverse="true" lazy="false" fetch="select">
			<key column="USER_ID" />
			<one-to-many class="com.filmrental.model.FilmRent" />
		</bag>

		<bag name="filmRequest" inverse="true" lazy="false" fetch="select">
			<key column="USER_ID" />
			<one-to-many class="com.filmrental.model.FilmRequest" />
		</bag>

	</class>
</hibernate-mapping>
 