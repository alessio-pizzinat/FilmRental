<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>FilmRental</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>


	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.filmrental.controller.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.filmrental.controller.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/login/user</url-pattern>
		<url-pattern>/login/user/view</url-pattern>
		<url-pattern>/login/user/rentfilm</url-pattern>
		<url-pattern>/login/user/returnfilm</url-pattern>
		<url-pattern>/login/user/addfilmrequest</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>com.filmrental.controller.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/login/admin</url-pattern>
		<url-pattern>/login/admin/view</url-pattern>
		<url-pattern>/login/admin/addtocollaction</url-pattern>
		<url-pattern>/login/admin/removefromcollaction</url-pattern>
		<url-pattern>/login/admin/addfromrequest</url-pattern>
		<url-pattern>/login/user/addfromprovided</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>Oracle Datasource example</description>
		<res-ref-name>jdbc/orclhr</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	
</web-app>